<div class="container">
  <div class="row mt-4">
    <div class="col-sm-9 px-sm-0 offset-sm-3">
     <h3 class="table-secondary d-inline-flex pl-5 pr-5 mt-4 mb-5">投稿編集</h3>

       <%= form_with model: @song, local:true do |f| %>
       <table class="table table-borderless table-sm">
        <tr>
          <td><%= image_tag @song.user.get_image, size:'50x50' %></td>
          <th><%= @song.user.name %></th>
        </tr>
        <tr>
          <th>ジャンル</th>
          <th><%= f.collection_select(:genre_id, @genres, :id, :name) %></th>
        </tr>
        <tr>
          <th>曲名</th>
          <th><%= f.text_field :title, size:"30x5" %></th>
        </tr>
        <tr>
          <th>投稿内容</th>
          <th><%= f.text_area :body, size:"31x5" %></th>
        </tr>
       </table>

       <div class="col-sm-9 px-sm-0 offset-sm-3">
       <%= f.submit "変更を保存",class: "btn btn-success" %>
       </div>
       <% end %>

    </div>
  </div>
</div>
