<div class="container">
  <div class='row mt-5'>
    <div class='col-md-4'>
     
     <% flash.each do |message_type, message| %>
     <div class="font-weight-bold", style="padding-left:30px; color:#00CED1">
      <i class="fa-regular fa-circle-check"></i>
      <%= message %>
     </div>
     <% end %>
     
     <table class='table table-borderless'>
      <tr>
       <td><%= image_tag @user.get_image, size:'100x100' %></td>
	     <th style="padding-top:50px"><%= @user.name %></th>
      </tr>
      <tr>
	     <th>自己紹介</th>
      </tr>
      <tr>
       <td colspan="2"><%= @user.introduction %></td>
      </tr>
     </table>
    
     <div>
      <% if @user == current_user %>
       <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
       <% end %>
     </div>
     
     <div class="mt-5">
      <%= link_to new_song_path do %>
     <button type="button" class="btn shadow rounded-circle p-0 btn btn-info" style="width:3rem;height:3rem;">＋</button>
     <% end %>
     </div>
     
    </div>
    


<div class='col-md-7 offset-md-1 mt-4'>
      <div class="tabs d-flex justify-content-between align-items-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
           <a class="nav-link active" data-toggle="tab" href="#mylist">自分の投稿</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#favorites">いいね</a>
          </li>
        </ul>
      </div>

     <div class="tab-content">
       <div id="mylist" class="tab-pane fade show active">
        <%= render 'mylist', songs: @songs %>    
       </div>
     <div id="favorites" class="tab-pane fade">
       <%= render 'favorites', favorite_songs: @favorite_songs %>
      </div>
    </div> 
</div>
</div>
</div>


