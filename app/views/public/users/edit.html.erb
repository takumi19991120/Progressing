<%= form_with model: @user, local:true do |f| %>
<div class="container">
  <div class="row mt-5">
    <div class="col-sm-10 px-sm-0 offset-sm-2">
     <h3 class="text-info font-weight-bold mt-4 ml-5">ユーザー編集</h3>

     <% if @user.email == "guest@example.com" %>
     <div class="text-center", style="padding-top:200px">
      <p>ゲストユーザーはユーザー情報の編集ができません。</p>
     </div>
     <% else %>

     <% flash.each do |message_type, message| %>
     <div class="font-weight-bold mt-3", style="padding-left:170px; color:#FF0000">
      <i class="fa-regular fa-circle-xmark"></i>
      <%= message %>
     </div>
     <% end %>

      <table class="table table-borderless table-sm mt-4">
        <tr>
          <th class="text-center">ユーザー画像</th>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <th class="text-center">ユーザー名</th>
          <th><%= f.text_field :name, placeholder: "ユーザー名を入力", size:"30x5" %></th>
        </tr>
        <tr>
          <th class="text-center">自己紹介</th>
          <th><%= f.text_area :introduction, placeholder: "自己紹介を入力", size:"33x7" %></th>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
   <div class="mx-auto mb-5">
    <div class="text-center mt-4">
     <%= f.submit "編集内容を保存", class:"btn btn-success" %>
     <%= link_to "退会する", user_check_path, class:"btn btn-danger ml-4" %>
    </div>
   </div>
  </div>
     <% end %>
</div>
<% end %>