  <div class='col mt-4'>
<table>
  <tbody>
    <% song_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_image, size: "50x50" %>
        <% end %><br>
        <%= comment.user.name %>
      </td>
      <td class="text-center"><%= simple_format(comment.content) %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "削除する", song_comment_path(song, comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true, data: {"turbolinks" => false} %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
   </div>