<div class="container">
  <div class='row mt-5'>
    <div class='col-md-4'>
     <table class='table table-borderless'>
      <tr>
       <th class="text-center">ユーザー画像</th>
       <td><%= image_tag @user.get_image, size:'100x100' %></td>
      </tr>
      <tr>
	      <th class="text-center">ユーザー名</th>
	      <th><%= @user.name %></th>
      </tr>
      <tr>
	      <th class="text-center">メールアドレス</th>
	      <th><%= @user.email %></th>
      </tr>
      <tr>
	      <th class="text-center">自己紹介</th>
	      <th><%= @user.introduction %></th>
      </tr>
      <tr>
	      <th class="text-center">作成日時</th>
	      <th><%= @user.created_at.strftime('%Y/%m/%d %H:%M') %></th>
      </tr>      
     </table>
     
     <div class="mx-auto", style="padding-left:80px">
      <%= link_to 'ユーザーを削除する', admin_user_path(@user), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
     </div>
    </div>



<div class='col-md-7 offset-md-1 mt-2'>
      <div class="tabs d-flex justify-content-between align-items-center">
        <ul class="nav nav-tabs">
          <li class="nav-item">
           <a class="nav-link active" data-toggle="tab" href="#mylist">自分の投稿</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#favorites">いいね</a>
          </li>
        </ul>
      </div>

     <div class="tab-content">
       <div id="mylist" class="tab-pane fade show active">
        <%= render 'mylist', songs: @songs %>
       </div>
     <div id="favorites" class="tab-pane fade">
       <%= render 'favorites', favorite_songs: @favorite_songs %>
      </div>
    </div>
</div>
</div>
</div>