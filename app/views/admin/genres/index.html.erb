<div class="container mt-5">
 <h3 class="text-info font-weight-bold">ジャンル一覧・追加</h3>
  <div class="row">
    <div class="col-xs">

        <%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
        <table class="table table-borderless">
         <tr>
          <th>ジャンル名</th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit "新規登録",class: "btn btn-success" %></th>
         </tr>
          <% end %>
        </table>

        <table class="table">
         <thead class="thead-light">
          <tr>
           <th>ジャンル</th>
           <th></th>
          </tr>
         </thead>

         <tbody>
         <% @genres.each do |genre| %>
          <tr>
           <td><%= genre.name %></td>
           <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></th>
          </tr>
         </tbody>
         <% end %>
        </table>
    </div>
  </div>
</div>
